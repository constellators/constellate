{
  "private": true,
  "workspaces": ["projects/*"],
  "scripts": {
    "build": "constellate build",
    "flowtypes": "flow-mono install-types",
    "test": "constellate test",
    "update": "yarn upgrade-interactive --latest --exact"
  },
  "devDependencies": {
    "constellate": "0.23.0-Core2",
    "constellate-plugin-build-babel": "0.19.8-core2",
    "constellate-plugin-build-flow": "0.19.8-core2",
    "eslint-config-constellate": "0.23.0-Core2",
    "flow-mono-cli": "1.3.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": "constellate",
    "rules": {
      "no-console": 0
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
