{
  "private": true,
  "workspaces": ["projects/*"],
  "scripts": {
    "build": "constellate build",
    "flowtypes": "flow-mono install-types",
    "publish": "constellate publish",
    "publish:core": "constellate publish -fg --npm-tag=core",
    "test": "constellate test",
    "update": "yarn upgrade-interactive --latest --exact"
  },
  "devDependencies": {
    "constellate": "0.23.0",
    "constellate-plugin-babel": "0.23.0",
    "constellate-plugin-flow": "0.23.0",
    "eslint-config-constellate": "0.23.0",
    "flow-mono-cli": "1.3.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": "constellate",
    "rules": {
      "no-console": 0
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
