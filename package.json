{
  "private": true,
  "workspaces": [
    "projects/*"
  ],
  "scripts": {
    "test": "constellate test",
    "update": "yarn upgrade-interactive --latest --exact"
  },
  "devDependencies": {
    "constellate": "0.21.1-0-core",
    "constellate-plugin-build-babel": "0.21.1-0-core",
    "constellate-plugin-build-flow": "0.21.1-0-core",
    "eslint-config-constellate": "0.21.1-0-core"
  },
  "eslintConfig": {
    "root": true,
    "extends": "constellate",
    "rules": {
      "no-console": 0
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
